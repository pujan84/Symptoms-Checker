<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.schecker.project.symptomschecker.SymptomsCheck"
    android:background="#c1feed">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Symptoms Checker"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textSize="35dp"
        android:background="#c1feed"
        android:textColor="#070707" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diseases"
        android:id="@+id/diseases"
        android:layout_marginTop="43dp"
        android:textSize="35dp"
        android:layout_below="@+id/symptoms"
        android:layout_alignRight="@+id/search"
        android:layout_alignEnd="@+id/search"
        android:layout_alignLeft="@+id/search"
        android:layout_alignStart="@+id/search" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Symptoms"
        android:id="@+id/symptoms"
        android:textSize="35dp"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/diseases"
        android:layout_alignEnd="@+id/diseases"
        android:layout_alignLeft="@+id/diseases"
        android:layout_alignStart="@+id/diseases" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:layout_marginTop="42dp"
        android:id="@+id/search"
        android:text="Use Assistant"
        android:onClick="onSearch"
        android:layout_below="@+id/diseases"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />


</RelativeLayout>
